<%= erb :'banner_standard', :layout => false %>
<div class="product_container">
	<% @theme.each do |theme| %>
	<span id="<%= theme.name.downcase.gsub(" ", "_") %>" class="product_long">
		<div class="long_info">
			<h4><%= theme.name %></h4>
			<p><%= theme.style %><% if theme.name === "Complete Set" %> <%= theme.extras %><% end %></p>
		</div>
		<span class="catalogue_button_container">
			<a href="/theme/<%= theme.id %>" class="gray_button">More Info</a>
			<a href="/buy/<%= theme.id %>" class="blue_button">Buy - $<%= theme.price %></a>
		</span>
	</span>
	<% end %>
</div>
<%= erb :'about', :layout => false %>